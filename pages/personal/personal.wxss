/* 遮罩层 */
.mask {
    width: 100%;
    height: 100%;
    position: absolute;
    background-color: #000;
    z-index: 9;
    top: 0;
    left: 0;
    opacity: 0.5;
}

.edit_phone {
    position: fixed;
    background-color: #fff;
    color: #393942;
    top: 25%;
    width: 75%;
    left: 50%;
    transform: translateX(-50%);
    border-radius: 40rpx;
    padding: 20rpx 40rpx;
}
.edit_phone_close {
    font-size: 32rpx;
    color: #aaaaaa;
    display: flex;
    position: relative;
}
.edit_phone_title {
    color: #1b1b22;
    font-size: 30rpx;
    margin-bottom: 40rpx;
}
.edit_input {
    border: 1px solid #aaa;
    border-radius: 44rpx;
    margin-bottom: 20rpx;
    display: flex;
    position: relative;
}
.edit_input input {
    padding-left: 40rpx;
}
.yanzhengma {
    font-size: 28rpx;
    color: #4CA8E2;
    /* height: 82rpx; */
    line-height: 82rpx;
    position: absolute;
    right: 20rpx;

}
.button-sp-area{
    margin: 0 auto;
    padding-top: 15px;
    width: 64%;
    padding-bottom: 40rpx;
}
.edit_btn {
    height: 84rpx!important;
    line-height: 84rpx!important;
    border-radius: 20rpx!important;
    background-color: #F27400!important;
    border: 1px solid #F27400!important;
    font-size: 36rpx!important;
    color: #fff!important;
}
.close_img {
    width: 28rpx;
    height: 28rpx;
    position: absolute;
    right: 0px;
    top: 10%;

}
.displaynone {
    display: none;
}
.displayblock {
    display: block;
    z-index: 999;

}